#cloud-config
hostname: ${name}
package_update: true
package_upgrade: true
packages:
- "curl"
- "incus-agent"
- "openssh-server"
- "ssh-import-id"
timezone: ${timezone}
users:
- name: ${standard_username}
  shell: "/bin/bash"
  ssh_authorized_keys:
    - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIDoqdhIBCfewaqLTKaWt0fF2oNPgR430pcpl4PkNWJ3w
    - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHYh+rz24+HqkPsgTG98pcEIoKeSUbidGPSfJRDs+DVn
    - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIPHxhWVzK0D0jpASF/TXwO7KtmnA95e9OFy55W6miLXd
  sudo: "ALL=(ALL) NOPASSWD:ALL"
- name: ${automation_username}
  shell: "/bin/bash"
  ssh_authorized_keys:
    - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIDoqdhIBCfewaqLTKaWt0fF2oNPgR430pcpl4PkNWJ3w
    - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIPHxhWVzK0D0jpASF/TXwO7KtmnA95e9OFy55W6miLXd
  sudo: "ALL=(ALL) NOPASSWD:ALL"
  uid: ${automation_uid}
runcmd:
  - [ systemctl, enable, --now, ssh.service ]
disk_setup:
  "/dev/sdb": {"layout": true, "overwrite": false, "table_type": "gpt"}
fs_setup:
- {"device": "/dev/sdb1", "filesystem": "ext4", "label": "data"}
mounts:
- ["/dev/sdb1", "/opt"]
